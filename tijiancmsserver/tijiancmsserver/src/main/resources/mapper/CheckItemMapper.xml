<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.neusoft.tijaincms.mapper.CheckItemMapper">
    <resultMap type="CheckItem" id="checkItemResultMap">
        <id property="ciId" column="ciId"/>
        <result property="ciName" column="ciName"/>
        <result property="ciContent" column="ciContent"/>
        <result property="meaning" column="meaning"/>
        <result property="remarks" column="remarks"/>
        <collection property="cdList" ofType="CheckItemDetailed"
                    select="com.neusoft.tijaincms.mapper.CheckItemDetailMapper.listCheckItemDetailed" column="ciId"></collection>
    </resultMap>
    <select id="getCheckItemById" parameterType="int" resultMap="checkItemResultMap">
        select * from checkItem where ciId=#{ciId}
    </select>
</mapper>
